<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Traveling" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greyTint</item>
        <item name="colorPrimaryVariant">@color/greyTint</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/greyTint</item>
        <item name="android:windowLightStatusBar">@color/pink</item>

        <!-- Customize your theme here. -->
        <item name="appTravelingH1">@style/TextAppearance.Traveling.Headline1</item>
        <item name="appTravelingH2">@style/TextAppearance.Traveling.Headline2</item>
        <item name="appTravelingH3">@style/TextAppearance.Traveling.Headline3</item>
        <item name="appTravelingH4">@style/TextAppearance.Traveling.Headline4</item>
        <item name="appTravelingH5">@style/TextAppearance.Traveling.Headline5</item>
        <item name="appTravelingB1">@style/TextAppearance.Traveling.Body1</item>
        <item name="appTravelingB2">@style/TextAppearance.Traveling.Body2</item>
        <item name="appTravelingButton">@style/TextAppearance.Traveling.Button</item>

        <item name="appTravelingBtnIconOnly">@style/Widget.App.Button.OutlinedButton.IconOnly</item>
        <item name="appTravelingOutLineDropBox">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu</item>
        <item name="appTravelingOutLineBox">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

    </style>
</resources>